$left-width = 260rem

.compress-tool-container {
  position relative
  display flex
  justify-content space-between
  box-sizing border-box
  width 100%
  height 100%

  .compress-tool-left {
    position relative
    box-sizing border-box
    width $left-width
    height 100%
    padding 10rem
    overflow-y auto
    border-right 1px solid var(--border-color)

    .el-image {
      width 100%
    }
  }


  .compress-tool-right {
    position relative
    box-sizing border-box
    width 'calc(100% - %s)' % $left-width
    height 100%
    padding 20rem

    &.no-img {
      width 100%
    }

    .compress-config {
      margin-top 20rem

      .img-encoder-title {
        font-size 13rem
      }

      .img-encoder-group {
        margin-top 12rem

        .desc {
          margin-left 10rem
          color var(--text-color-4)
          font-size 12rem
        }
      }



      :deep() .el-radio-group {

        display inline-block

        .el-radio {
          display block
        }
      }

      :deep() .el-switch {
        user-select none
      }
    }


    .user-operate {
      display flex
      justify-content flex-end
      margin-top 20rem

      &.compressed {
        justify-content space-between
      }
    }
  }
}
