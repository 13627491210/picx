@import "../../style/base.styl"

$info-item-height = 68rem
$info-item-border = 1rem
$info-item-padding = 5rem
$compressed-file-background-color = #228eff
$image-width = $info-item-height - ($info-item-border * 2)

.to-upload-image-list-card {
  position relative
  box-sizing border-box
  width 100%
  margin-top 6rem

  .header {
    display flex
    align-items center
    justify-content space-between
    box-sizing border-box
    width 100%
    height 30rem
    padding-bottom 6rem
    font-size 12rem
  }

  .body {
    box-sizing border-box
    width 100%
    height 100%
    max-height 170rem
    margin-top 10rem
    padding 10rem
    overflow-y auto
    border 1rem solid var(--border-color)
    border-radius 6rem

    &::-webkit-scrollbar {
      width 5rem
    }

    &::-webkit-scrollbar-thumb {
      border-radius 2rem
    }

    .image-uploading-info-box {
      position relative
      box-sizing border-box
      width 100%
      margin 0
      padding 0

      .image-uploading-info-item {
        position relative
        box-sizing border-box
        width 100%
        height $info-item-height
        margin-bottom 10rem
        padding-left $image-width
        overflow hidden
        font-size 15rem
        border $info-item-border solid var(--border-color)
        border-radius 5rem
        transition all 0.3s ease

        &.disable {
          cursor not-allowed
          pointer-events none
        }

        &:last-child {
          margin-bottom 0
        }

        &:hover {
          box-shadow 0 0 5rem var(--shadow-hover-color)
        }

        .left-image-box {
          position absolute
          top 0
          left 0
          box-sizing border-box
          width $image-width
          height 100%
          margin-right 5rem

          img {
            width 100%
            height 100%
            object-fit cover
            overflow hidden
            border-top-left-radius 5rem
            border-bottom-left-radius 5rem
            cursor pointer
          }
        }


        .right-operation-box {
          position relative
          box-sizing border-box
          width 100%
          height 100%
          padding $info-item-padding 20rem $info-item-padding $info-item-padding

          .top
          .bottom {
            box-sizing border-box
            width 100%
            height 50%
            padding 0 5rem
          }

          .top {
            display flex
            justify-content space-between

            .image-name
            .image-info {
              display flex
              align-items center
              box-sizing border-box
              height 100%
            }

            .image-name {
              overflow hidden
              font-size 13rem
              white-space nowrap
              text-overflow ellipsis
            }

            .image-info {
              font-size 12rem

              .item {
                margin-left 10rem
                padding 1rem 4rem
                background var(--third-background-color)
                border-radius 2rem


                +picx-mobile() {
                  &.last-modified {
                    display none
                  }
                }

                +picx-tablet() {
                  &.original-file-size {
                    display none
                  }
                }

                &.compressed {
                  color $compressed-file-background-color
                }
              }
            }
          }


          .bottom {
            display flex
            align-items center

            &.rename-operation {

              .el-checkbox {
                margin-right 20rem
              }

              .rename-input {
                input {
                  height 23rem
                  line-height 23rem
                }
              }
            }
          }
        }


        .upload-status-box {
          position absolute
          top -7rem
          right -17rem
          box-sizing border-box
          width 46rem
          height 26rem
          color #fff
          text-align center
          box-shadow 0 1rem 1rem var(--border-color)
          transform rotate(45deg)

          &.wait-upload {
            background var(--await-upload-color)
          }

          &.uploading {
            background var(--uploading-color)
          }

          &.uploaded {
            background var(--uploaded-color)
          }

          i {
            margin-top 12rem
            font-size 12rem
            transform rotate(-45deg)
          }
        }

        .remove-to-upload-image {
          position absolute
          right 5rem
          bottom 5rem
          cursor pointer
        }
      }
    }
  }
}
