@import '../../style/base.styl'

.management-page-container {

  .menu-box {
    min-width 120rem
    position fixed
    z-index 99
    box-shadow 0 0 20rem rgba(0, 0, 0, 0.15)
    background var(--background-color)
    border-radius 5rem
    overflow hidden

    li {
      background var(--background-color)
      color var(--text-color)
      line-height 30rem
      padding 5rem 15rem
      cursor pointer
    }

    li:hover {
      background var(--second-background-color)
      color var(--text-color)
    }
  }


  .list {
    display flex
    flex-wrap wrap
    padding 0

    .item {
      cursor pointer
      transition all 0.15s
      border-radius 5rem
      margin 5rem
      background rgba(0, 0, 0, 0)
    }

    .item:hover {
      background rgba(0, 0, 0, 0.05)
    }

    .item:active {
      background rgba(0, 0, 0, 0.12)
    }
  }
}

.fade-enter-active, .fade-leave-active {
  transition opacity 0.15s ease
}

.fade-enter-from, .fade-leave-to {
  opacity 0
}

.upload-dialog {
  width 100%
  height 80vh
  background #fff
  z-index 999
}
