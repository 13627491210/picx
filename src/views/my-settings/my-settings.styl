.setting-title {
  font-size 16rem
  font-weight bold
  margin 40rem 0 20rem 0

  &:first-child {
    margin-top 0
  }
}

.setting-list {
  padding 0
  margin 0

  .setting-item {
    margin-bottom 10rem

    &.cdn {
      display flex
      align-items center

      .add-external-link-type-rule {
        cursor pointer
        margin-left 10px
        font-size 20px
      }
    }

    &.last-child {
      margin-bottom 0
    }

    .prefix-input {
      width calc(100% - 50rem)
      margin-left 50rem
      margin-top 15rem
    }

    .img-encoder-title {
      margin-bottom 12rem
    }

    :deep() .el-radio-group {

      display inline-block

      .el-radio {
        display block
      }

    }

  }

}

.external-link-type-rule-option {

  .left {
    float left
    margin-right 10px
  }

  .right {
    float right
    color var(--el-text-color-secondary)
    font-size 12px
  }
}
